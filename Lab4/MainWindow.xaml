<Window x:Class="Lab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="DimGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="mathTextBlock" Grid.Column="1" Foreground="White" TextAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="formatTextBlock" Grid.Column="2" Foreground="White" TextAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Result" Grid.Row="1" Grid.Column="1" Margin="120,85,120,85" Click="RunButton_Click" Grid.ColumnSpan="2" Background="Gray" BorderBrush="LightGray" Foreground="White"/>
    </Grid>
</Window>